<%- include('../partials/header') %>

<!-- Page Specific Styles -->
<style>
    /* Animation Keyframes */
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideIn {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    /* Container & Layout */
    .create-test-container {
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.6s ease-out;
    }

    .page-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        animation: slideIn 0.5s ease-out;
    }

    .back-btn {
        background: rgba(33, 38, 45, 0.8);
        color: #8b949e;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        margin-right: 20px;
        border: 1px solid var(--border-color);
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .back-btn:hover {
        background: #30363d;
        color: white;
        transform: translateX(-3px);
    }

    /* Form Card Styles */
    .form-card {
        background: #161b22;
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        position: relative;
        overflow: hidden;
    }

    /* Gradient Top Border */
    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(90deg, #58a6ff, #8a63d2, #ff7b72);
    }

    .section-title {
        font-size: 1.1rem;
        color: #58a6ff;
        margin-bottom: 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(48, 54, 61, 0.5);
    }

    .section-icon {
        background: rgba(88, 166, 255, 0.15);
        padding: 6px;
        border-radius: 6px;
        font-size: 1rem;
    }

    /* Input Enhancements */
    .input-wrapper {
        position: relative;
        margin-bottom: 25px;
        transition: all 0.3s;
    }

    .input-wrapper:focus-within label {
        color: #58a6ff;
    }

    .form-control {
        background: #0d1117;
        border: 1px solid #30363d;
        color: #c9d1d9;
        padding: 12px 16px;
        border-radius: 8px;
        width: 100%;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.2);
    }

    .form-control:focus {
        border-color: #58a6ff;
        background: #12181f; /* Slightly lighter on focus */
        box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.2);
        outline: none;
    }

    /* Topic Selection Grid - Checkbox Style */
    .topic-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 12px;
        background: #0d1117;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #30363d;
        max-height: 250px;
        overflow-y: auto;
    }

    /* Scrollbar styling for the grid */
    .topic-grid::-webkit-scrollbar {
        width: 8px;
    }
    .topic-grid::-webkit-scrollbar-track {
        background: #0d1117;
    }
    .topic-grid::-webkit-scrollbar-thumb {
        background: #30363d;
        border-radius: 4px;
    }

    .topic-checkbox {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        background: #161b22;
        border: 1px solid #30363d;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        user-select: none;
        position: relative;
    }

    .topic-checkbox:hover {
        border-color: #8b949e;
        background: #21262d;
    }

    .topic-checkbox.selected {
        background: rgba(35, 134, 54, 0.15); /* Green tint */
        border-color: #2ea043;
        color: #2ea043;
    }

    .topic-checkbox input {
        width: 18px; 
        height: 18px;
        accent-color: #2ea043;
        margin: 0;
        cursor: pointer;
    }

    .topic-checkbox span {
        font-size: 0.9rem;
        color: #e6edf3;
        font-weight: 500;
    }

    /* Grid Layouts */
    .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 25px;
    }

    .form-grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
    }

    @media (max-width: 768px) {
        .form-grid-2, .form-grid-3 {
            grid-template-columns: 1fr;
        }
    }

    /* Submit Button */
    .btn-create {
        background: linear-gradient(135deg, #238636 0%, #2ea043 100%);
        color: white;
        width: 100%;
        padding: 15px;
        font-size: 1rem;
        font-weight: 700;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        margin-top: 30px;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(46, 160, 67, 0.4);
    }

    .help-text {
        font-size: 0.8rem;
        color: #8b949e;
        margin-top: 6px;
        display: block;
    }
</style>

<div class="create-test-container">
    
    <div class="page-header">
        <a href="/admin/dashboard" class="back-btn">
            <span>&larr;</span> Back
        </a>
        <h2 style="margin: 0; font-size: 1.8rem; font-weight: 700;">Create Configuration</h2>
    </div>

    <form action="/admin/tests/create" method="POST" class="form-card">
        
        <!-- Section 1: Basic Info -->
        <div class="section-title">
            <span class="section-icon">üìù</span> Basic Information
        </div>

        <div class="form-grid-2">
            <div class="input-wrapper">
                <label>Configuration Title</label>
                <input type="text" name="title" class="form-control" placeholder="e.g. Full Stack Developer Assessment - L1" required>
            </div>

            <div class="input-wrapper">
                <label>Category Type</label>
                <select name="category" class="form-control">
                    <option value="Test">Standard Test üèÜ (Timed, Leaderboard)</option>
                    <option value="Practice Set">Practice Set üéØ (Flexible, Learning)</option>
                </select>
                <small class="help-text">Standard Tests affect rankings. Practice Sets are for self-improvement.</small>
            </div>
        </div>

        <!-- Adaptive Mode Option -->
        <div style="margin-bottom: 25px; padding: 15px; background: rgba(88, 166, 255, 0.1); border: 1px solid rgba(88, 166, 255, 0.3); border-radius: 8px; display: flex; align-items: start; gap: 15px;">
            <input type="checkbox" name="isAdaptive" id="adaptiveCheck" style="margin-top: 5px; width: 18px; height: 18px; accent-color: #58a6ff;">
            <div>
                <label for="adaptiveCheck" style="font-weight: 600; color: #58a6ff; font-size: 1rem; cursor: pointer;">Enable Adaptive Practice Mode üß†</label>
                <div style="font-size: 0.85rem; color: #c9d1d9; margin-top: 5px; line-height: 1.4;">
                    <strong>What is this?</strong> In Adaptive Mode, the test difficulty changes based on student performance.
                    <ul>
                        <li>Start with Medium questions</li>
                        <li>Correct Answer &rarr; Harder Question</li>
                        <li>Wrong Answer &rarr; Easier Question</li>
                    </ul>
                    <span style="color: #8b949e;">(Note: Marks distribution may vary in this mode)</span>
                </div>
            </div>
        </div>

        <div class="input-wrapper">
            <label>Tags (Comma separated)</label>
            <input type="text" name="tags" class="form-control" placeholder="e.g. JavaScript, Google Prep, Easy">
        </div>

        <!-- Section 2: Question Logic -->
        <div class="section-title" style="margin-top: 30px;">
            <span class="section-icon">‚öôÔ∏è</span> Question Logic
        </div>

        <div class="input-wrapper">
            <label>Include Topics (Select at least one)</label>
            
            <div class="topic-grid">
                <% if (typeof topics === 'undefined' || topics.length === 0) { %>
                    <div style="padding: 20px; text-align: center; color: #ff7b72; grid-column: 1 / -1;">
                        <span style="font-size: 1.5rem;">‚ö†Ô∏è</span><br>
                        <strong>No Topics Found</strong><br>
                        <p style="font-size: 0.9rem; margin-top: 10px; margin-bottom: 15px; color: #8b949e;">
                            You need to add questions to the Question Bank first. The system automatically detects topics from your questions.
                        </p>
                        <a href="/admin/questions" class="btn" style="background:#58a6ff; color:white; padding:8px 16px; border-radius:6px; text-decoration:none; font-size: 0.9rem;">+ Add Questions Now</a>
                    </div>
                <% } else { %>
                    <% topics.forEach(t => { %>
                        <label class="topic-checkbox" onclick="toggleCheckbox(this)">
                            <input type="checkbox" name="topics" value="<%= t %>" style="pointer-events: none;"> <!-- pointer-events:none prevents double toggle since label handles click -->
                            <span><%= t %></span>
                        </label>
                    <% }) %>
                <% } %>
            </div>
            
            <small class="help-text">Click cards to select topics. Questions will be randomly picked from these.</small>
            
            <script>
                function toggleCheckbox(label) {
                    const checkbox = label.querySelector('input');
                    // Manually toggle because pointer-events:none on input prevents default label behavior conflict
                    // actually, default labelclick toggles input. 
                    // Let's rely on default label behavior but just update class
                    // Wait, if I click label, input toggles. 
                    // So I just need to update class based on input state *after* change.
                }
                
                // Better simple script to handle visual class
                document.querySelectorAll('.topic-checkbox input').forEach(cb => {
                    cb.style.pointerEvents = 'auto'; // Re-enable if I disabled it
                    cb.addEventListener('change', function() {
                         const label = this.closest('.topic-checkbox');
                         if(this.checked) label.classList.add('selected');
                         else label.classList.remove('selected');
                    });
                });
            </script>
        </div>

        <div class="form-grid-3">
            <div class="input-wrapper">
                <label style="color: #7ee787;">Easy Questions</label>
                <input type="number" name="easyCount" class="form-control" value="10" min="0">
            </div>
            <div class="input-wrapper">
                <label style="color: #ffaa00;">Medium Questions</label>
                <input type="number" name="mediumCount" class="form-control" value="15" min="0">
            </div>
            <div class="input-wrapper">
                <label style="color: #ff7b72;">Hard Questions</label>
                <input type="number" name="hardCount" class="form-control" value="5" min="0">
            </div>
        </div>

        <!-- Section 3: Time & Marks -->
        <div class="section-title" style="margin-top: 30px;">
            <span class="section-icon">‚è±</span> Time & Evaluation
        </div>

        <div class="form-grid-3">
            <div class="input-wrapper">
                <label>Duration (Minutes)</label>
                <input type="number" name="duration" class="form-control" value="30" required>
            </div>
            <div class="input-wrapper">
                <label>Correct Answer (+)</label>
                <input type="number" name="correctMark" class="form-control" value="1" step="0.25">
            </div>
            <div class="input-wrapper">
                <label>Incorrect Answer (-)</label>
                <input type="number" name="incorrectMark" class="form-control" value="-0.25" step="0.25" style="color: #ff7b72;">
            </div>
        </div>

        <!-- Section 4: Scheduling (Optional) -->
        <div class="section-title" style="margin-top: 30px;">
            <span class="section-icon">üìÖ</span> Scheduling (Optional)
        </div>
        <p style="color: #8b949e; font-size: 0.9rem; margin-bottom: 15px;">
            Leave these blank if you want the test to be available immediately and indefinitely.
        </p>

        <div class="form-grid-2">
            <div class="input-wrapper">
                <label>Start Date & Time</label>
                <input type="datetime-local" name="startDate" class="form-control" style="color-scheme: dark;">
            </div>
            <div class="input-wrapper">
                <label>End Date & Time</label>
                <input type="datetime-local" name="endDate" class="form-control" style="color-scheme: dark;">
            </div>
        </div>

        <button type="submit" class="btn-create">
            Create Configuration üöÄ
        </button>

    </form>
</div>

<%- include('../partials/footer') %>
