<%- include('../partials/header') %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #1f6feb 0%, #388bfd 100%); padding: 40px 20px; text-align: center; color: white;">
    <h1 style="font-size: 2rem; font-weight: 800; margin-bottom: 5px;">Edit Student Profile</h1>
    <p style="opacity: 0.9;">Update student account details.</p>
</div>

<div style="max-width: 600px; margin: 40px auto; padding: 20px;">
    
    <div class="card" style="background: var(--bg-card); padding: 30px; border-radius: 12px; border: 1px solid var(--border-color);">
        <form action="/admin/student/edit/<%= student._id %>" method="POST">
            
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="name" class="form-control" value="<%= student.name %>" required>
            </div>

            <div class="form-group">
                <label>Email Address</label>
                <input type="email" name="email" class="form-control" value="<%= student.email %>" required>
            </div>

            <!-- Add other fields if necessary, e.g., Roll Number if stored in User model -->
            <!-- Assuming User model only has name/email/password for now based on context -->
            
            <div style="margin-top: 15px; padding: 15px; background: rgba(248,81,73,0.1); border-radius: 6px; border: 1px solid rgba(248,81,73,0.3);">
                <label style="color: #f85149;">Reset Password (Optional)</label>
                <input type="password" name="newPassword" class="form-control" placeholder="Enter new password to reset">
                <small style="color: var(--text-secondary);">Leave blank to keep existing password.</small>
            </div>

            <div style="display: flex; gap: 15px; margin-top: 30px;">
                <button type="submit" class="btn-primary-custom" style="padding: 10px 20px; border-radius: 6px; border:none; background: #1f6feb; color: white; cursor: pointer;">Update Student</button>
                <a href="/admin/students" style="padding: 10px 20px; text-decoration: none; color: var(--text-primary); border: 1px solid var(--border-color); border-radius: 6px; display: inline-block;">Cancel</a>
            </div>

        </form>
    </div>

</div>

<style>
    .form-group { margin-bottom: 20px; }
    .form-group label { display: block; margin-bottom: 8px; font-weight: 600; color: var(--text-primary); }
    .form-control {
        width: 100%;
        padding: 10px;
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        border-radius: 6px;
        color: var(--text-primary);
        font-family: inherit;
    }
    .form-control:focus { outline: 2px solid #1f6feb; border-color: transparent; }
</style>

<%- include('../partials/footer') %>