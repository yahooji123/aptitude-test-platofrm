<%- include('../partials/header') %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #1e293b, #0f172a); margin-bottom: 30px;">
    <div style="text-align: center; padding: 20px;">
        <h1 style="color: #e2e8f0; margin-bottom: 10px;">Test Result</h1>
        <p style="color: #94a3b8;">Review your performance and learn from mistakes.</p>
    </div>
</div>

<div class="dashboard-container" style="max-width: 1000px; margin: 0 auto; padding: 0 20px;">
    
    <!-- Score Card -->
    <div style="background: #1e293b; border: 1px solid #334155; border-radius: 12px; padding: 40px; text-align: center; margin-bottom: 30px;">
        <div class="score-circle" style="
            width: 160px; 
            height: 160px; 
            background: <%= (score/total > 0.7) ? 'rgba(16, 185, 129, 0.1)' : 'rgba(239, 68, 68, 0.1)' %>; 
            border: 4px solid <%= (score/total > 0.7) ? '#10b981' : '#ef4444' %>;
            border-radius: 50%; 
            display: flex; 
            flex-direction: column;
            align-items: center; 
            justify-content: center; 
            margin: 0 auto 20px;
            color: <%= (score/total > 0.7) ? '#34d399' : '#f87171' %>;
            box-shadow: 0 0 20px <%= (score/total > 0.7) ? 'rgba(16, 185, 129, 0.2)' : 'rgba(239, 68, 68, 0.2)' %>;
        ">
            <span style="font-size: 3.5rem; font-weight: 800; line-height: 1;"><%= score %></span>
            <span style="font-size: 1.1rem; opacity: 0.8; margin-top: 5px;">out of <%= total %></span>
        </div>
        
        <h2 style="color: #e2e8f0; margin-bottom: 20px;">
            <%= (score/total > 0.8) ? 'Outstanding Performance! ðŸŽ‰' : (score/total > 0.5) ? 'Good Effort! ðŸ‘' : 'Keep Practicing! ðŸ’ª' %>
        </h2>
        
        <div style="margin-top: 1rem;">
            <a href="/english/dashboard" class="btn" style="background: #3b82f6; color: white; padding: 12px 30px; border-radius: 6px; text-decoration: none; font-weight: 600; display: inline-block;">Take Another Test</a>
        </div>
    </div>

    <!-- Smart Revision Set -->
    <% const incorrects = results.filter(r => !r.isCorrect); %>
    <% if (incorrects.length > 0) { %>
        <div style="background: rgba(245, 158, 11, 0.1); border: 1px solid rgba(245, 158, 11, 0.3); border-radius: 12px; padding: 25px; margin-bottom: 30px;">
            <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
                <span style="font-size: 1.5rem;">ðŸ’¡</span>
                <h3 style="color: #fbbf24; margin: 0;">Smart Revision</h3>
            </div>
            <p style="color: #cbd5e1; margin-bottom: 15px;">Focus on these words. We've added them to your learning queue.</p>
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 10px;">
                <% incorrects.forEach(item => { %>
                    <div style="background: #0f172a; padding: 12px; border-radius: 6px; border: 1px solid #334155; display: flex; justify-content: space-between; align-items: center;">
                        <span style="color: #94a3b8;"><%= item.hindi %></span>
                        <strong style="color: #fbbf24;"><%= item.correctAnswer %></strong>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>

    <!-- Detailed Review -->
    <div style="background: #1e293b; border: 1px solid #334155; border-radius: 12px; overflow: hidden;">
        <div style="padding: 20px; border-bottom: 1px solid #334155;">
            <h3 style="color: #e2e8f0; margin: 0;">Detailed Analysis</h3>
        </div>
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #0f172a; text-align: left;">
                        <th style="padding: 15px 20px; color: #94a3b8; font-weight: 500;">Hindi Meaning</th>
                        <th style="padding: 15px 20px; color: #94a3b8; font-weight: 500;">Your Answer</th>
                        <th style="padding: 15px 20px; color: #94a3b8; font-weight: 500;">Correct Word</th>
                        <th style="padding: 15px 20px; color: #94a3b8; font-weight: 500; text-align: right;">Result</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(result => { %>
                        <tr style="border-bottom: 1px solid #334155; background: <%= result.isCorrect ? 'transparent' : 'rgba(239, 68, 68, 0.05)' %>">
                            <td style="padding: 15px 20px; color: #cbd5e1;"><%= result.hindi %></td>
                            <td style="padding: 15px 20px; font-weight: 600; color: <%= result.isCorrect ? '#34d399' : '#f87171' %>;">
                                <%= result.userAnswer || '(Empty)' %>
                            </td>
                            <td style="padding: 15px 20px; color: #e2e8f0; font-weight: 600;"><%= result.correctAnswer %></td>
                            <td style="padding: 15px 20px; text-align: right;">
                                <% if (result.isCorrect) { %>
                                    <span style="color: #34d399; background: rgba(52, 211, 153, 0.1); padding: 4px 10px; border-radius: 4px; font-size: 0.85rem;">Correct</span>
                                <% } else { %>
                                    <span style="color: #f87171; background: rgba(239, 68, 68, 0.1); padding: 4px 10px; border-radius: 4px; font-size: 0.85rem;">Incorrect</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
