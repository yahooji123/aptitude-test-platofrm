<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AptitudePro</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <a href="/" class="logo">
                <span style="color: #58a6ff;">Aptitude</span>Pro
            </a>
            <button class="mobile-menu-btn" onclick="toggleMenu()" aria-label="Toggle Menu">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </button>
        </div>
        
        <div class="nav-links" id="navLinks">
            <% if (typeof user !== 'undefined' && user) { %>
                <div class="nav-user-info">
                    <span style="color: var(--text-secondary);">Welcome, <%= user.name %></span>
                </div>
                <% if (user.role === 'admin') { %>
                    <a href="/admin/dashboard" class="nav-item">Admin Panel</a>
                    <a href="/adaptive/admin/dashboard" class="nav-item adaptive-link">Adaptive®</a>
                    <a href="/essay/admin/dashboard" class="nav-item" style="color: #f472b6;">Essay (Admin)</a>
                    <a href="/reading/admin/dashboard" class="nav-item" style="color: #60a5fa;">Reading (Admin)</a>
                    <a href="/english/admin/dashboard" class="nav-item" style="color: #34d399;">English (Admin)</a>
                    <a href="/admin/profile" class="nav-item icon-link" title="Admin Profile">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span class="mobile-only">Profile</span>
                    </a>
                <% } else { %>
                    <a href="/student/dashboard" class="nav-item">Dashboard</a>
                    <a href="/adaptive/student/dashboard" class="nav-item adaptive-link">Adaptive®</a>
                    <a href="/essay/student/dashboard" class="nav-item" style="color: #f472b6;">Essay Test</a>
                    <a href="/reading/student/dashboard" class="nav-item" style="color: #60a5fa;">Reading Practice</a>
                    <a href="/english/dashboard" class="nav-item" style="color: #34d399;">English Learning</a>
                    <a href="/student/history" class="nav-item">My History</a>
                    <a href="/student/profile" class="nav-item icon-link" title="My Profile">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span class="mobile-only">Profile</span>
                    </a>
                <% } %>
                <a href="/auth/logout" class="btn-nav-login btn-logout">Logout</a>
            <% } else { %>
                <a href="/login" class="btn-nav-login">Login</a>
                <a href="/register" class="btn-nav-signup">Register</a>
            <% } %>
        </div>
    </nav>
    <div class="container main-content-wrapper">

    <script>
        function toggleMenu() {
            const nav = document.getElementById('navLinks');
            nav.classList.toggle('active');
        }
    </script>
