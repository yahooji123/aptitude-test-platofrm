<%- include('../partials/header') %>

<style>
    .custom-container {
        max-width: 800px;
        margin: 40px auto;
        animation: fadeIn 0.5s ease-out;
    }

    .form-card {
        background: #161b22;
        border: 1px solid #30363d;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.2);
    }

    .section-title {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 25px;
        border-bottom: 1px solid #30363d;
        padding-bottom: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        color: #8b949e;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .form-control {
        background: #0d1117;
        border: 1px solid #30363d;
        color: #e6edf3;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        border-color: #58a6ff;
        outline: none;
    }

    .toggle-switch {
        display: flex;
        align-items: center;
        gap: 15px;
        background: #0d1117;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #30363d;
    }

    /* Custom Checkbox as Switch */
    .switch-input {
        appearance: none;
        width: 40px;
        height: 20px;
        background: #30363d;
        border-radius: 20px;
        position: relative;
        cursor: pointer;
        transition: 0.3s;
    }

    .switch-input::after {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 50%;
        transition: 0.3s;
    }

    .switch-input:checked {
        background: #238636;
    }

    .switch-input:checked::after {
        left: 22px;
    }

    .btn-create {
        background: #238636;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        font-size: 1rem;
        margin-top: 20px;
        transition: background 0.2s;
    }

    .btn-create:hover {
        background: #2ea043;
    }
    
    .distribution-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 15px;
        margin-top: 10px;
    }
</style>

<div class="custom-container">
    <div class="form-card">
        <h2 class="section-title">üõ†Ô∏è Build Your Custom Test</h2>
        
        <form action="/student/custom-test/create" method="POST">
            
            <div class="form-group">
                <label class="form-label">Select Topic(s)</label>
                <div style="max-height: 200px; overflow-y: auto; border: 1px solid #30363d; border-radius: 8px; padding: 15px; background: #0d1117;">
                    <% if (topics.length > 0) { %>
                        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 10px;">
                            <% topics.forEach((topic, index) => { %>
                                <div style="display: flex; align-items: center; background: #161b22; padding: 8px; border-radius: 6px; border: 1px solid #30363d;">
                                    <input type="checkbox" id="topic_<%= index %>" name="topics" value="<%= topic %>" 
                                        style="width: 18px; height: 18px; margin-right: 10px; accent-color: #238636; cursor: pointer;">
                                    <label for="topic_<%= index %>" style="color: #e6edf3; cursor: pointer; user-select: none; width: 100%;"><%= topic %></label>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div style="text-align: center; color: #8b949e; padding: 20px;">
                            <p>‚ö†Ô∏è No topics found in the database.</p>
                            <small>Please ask admin to add questions first.</small>
                        </div>
                    <% } %>
                </div>
                <small style="color: #8b949e; display: block; margin-top: 5px;">Select one or more topics for your test.</small>
            </div>

            <div class="form-group">
                <label class="form-label">Duration (Minutes)</label>
                <input type="number" name="duration" class="form-control" value="30" min="5" max="180" required>
            </div>

            <div class="form-group">
                <div class="toggle-switch">
                    <input type="checkbox" id="adaptiveToggle" name="isAdaptive" class="switch-input" onchange="toggleMode()">
                    <label for="adaptiveToggle" style="cursor: pointer;">
                        <strong>Enable Adaptive Mode</strong><br>
                        <span style="font-size: 0.85rem; color: #8b949e;">Difficulty adjusts automatically based on your answers.</span>
                    </label>
                </div>
            </div>

            <!-- Total Question Mode (For Adaptive) -->
            <div id="adaptiveSettings" style="display: none;">
                <div class="form-group">
                    <label class="form-label">Total Questions</label>
                    <input type="number" name="totalQuestions" class="form-control" value="10" min="5" max="50">
                </div>
            </div>

            <!-- Manual Distribution Mode (For Standard) -->
            <div id="standardSettings">
                <label class="form-label">Difficulty Distribution</label>
                <div class="distribution-grid">
                    <div>
                        <label style="font-size: 0.8rem; color: #3fb950; display:block; margin-bottom:5px;">Easy</label>
                        <input type="number" name="easy" class="form-control" value="5" min="0">
                    </div>
                    <div>
                        <label style="font-size: 0.8rem; color: #d29922; display:block; margin-bottom:5px;">Medium</label>
                        <input type="number" name="medium" class="form-control" value="3" min="0">
                    </div>
                    <div>
                        <label style="font-size: 0.8rem; color: #ff7b72; display:block; margin-bottom:5px;">Hard</label>
                        <input type="number" name="hard" class="form-control" value="2" min="0">
                    </div>
                </div>
            </div>

            <div style="margin-top: 25px; padding: 15px; background: rgba(56, 139, 253, 0.1); border-radius: 8px; font-size: 0.9rem; color: #c9d1d9;">
                ‚ÑπÔ∏è <strong>Note:</strong> This custom test will be valid for <strong>3 hours</strong> only. It will be automatically deleted after that to keep our system clean.
            </div>

            <button type="submit" class="btn-create" onclick="return validateForm()">Create & Launch Test</button>
        </form>
    </div>
</div>

<script>
    function validateForm() {
        const checkboxes = document.querySelectorAll('input[name="topics"]:checked');
        if (checkboxes.length === 0) {
            alert('Please select at least one topic.');
            return false;
        }
        return true;
    }

    function toggleMode() {
        const isAdaptive = document.getElementById('adaptiveToggle').checked;
        const adaptiveSettings = document.getElementById('adaptiveSettings');
        const standardSettings = document.getElementById('standardSettings');

        if (isAdaptive) {
            adaptiveSettings.style.display = 'block';
            standardSettings.style.display = 'none';
        } else {
            adaptiveSettings.style.display = 'none';
            standardSettings.style.display = 'block';
        }
    }
</script>

<%- include('../partials/footer') %>