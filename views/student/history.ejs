<%- include('../partials/header') %>

<style>
    /* Animation */
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .history-container {
        max-width: 1000px;
        margin: 0 auto;
        animation: fadeInUp 0.6s ease-out;
    }

    /* Header Section */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
        background: linear-gradient(135deg, #fff 0%, #a5d6ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .back-btn {
        background: rgba(33, 38, 45, 0.8);
        color: #8b949e;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        border: 1px solid var(--border-color, #30363d);
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
    }

    .back-btn:hover {
        background: #30363d;
        color: white;
        transform: translateX(-3px);
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: #161b22;
        border: 1px solid #30363d;
        border-radius: 12px;
        padding: 20px;
        position: relative;
        overflow: hidden;
        transition: transform 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    /* Decorative Gradients for Cards */
    .stat-card.purple::before { background: linear-gradient(90deg, #d2a8ff, #a371f7); }
    .stat-card.blue::before { background: linear-gradient(90deg, #58a6ff, #1f6feb); }
    .stat-card.green::before { background: linear-gradient(90deg, #3fb950, #2ea043); }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #8b949e;
        font-weight: 500;
    }

    /* Table Styles */
    .table-card {
        background: #161b22;
        border: 1px solid #30363d;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #e6edf3;
    }

    .custom-table th {
        background: #0d1117;
        padding: 15px 20px;
        text-align: left;
        font-weight: 600;
        color: #8b949e;
        border-bottom: 1px solid #30363d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .custom-table td {
        padding: 16px 20px;
        border-bottom: 1px solid #21262d;
        vertical-align: middle;
    }

    .custom-table tr:last-child td {
        border-bottom: none;
    }

    .custom-table tr:hover td {
        background: rgba(88, 166, 255, 0.03);
    }

    /* Table Badges & Elements */
    .date-text {
        color: #c9d1d9;
        font-weight: 500;
    }
    
    .time-subtext {
        display: block;
        font-size: 0.75rem;
        color: #8b949e;
        margin-top: 4px;
    }

    .topic-badge {
        display: inline-block;
        padding: 4px 10px;
        background: rgba(31, 111, 235, 0.15);
        color: #58a6ff;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid rgba(88, 166, 255, 0.2);
    }

    .score-text {
        font-family: 'JetBrains Mono', monospace;
        font-weight: 600;
    }

    .score-text.high { color: #3fb950; }
    .score-text.mid { color: #d29922; }
    .score-text.low { color: #ff7b72; }

    .btn-view {
        background: rgba(35, 134, 54, 0.1);
        color: #3fb950;
        border: 1px solid rgba(63, 185, 80, 0.3);
        padding: 6px 14px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-view:hover {
        background: #238636;
        color: white;
        border-color: #238636;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #8b949e;
    }
    
    .empty-icon {
        font-size: 3rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-btn {
        margin-top: 20px;
        background: #1f6feb;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 6px;
        display: inline-block;
        font-weight: 600;
    }
</style>

<!-- Calculation Logic (Client/View Side for simplicity) -->
<%
    let totalTests = results.length;
    let avgScore = 0;
    let highestScore = 0;
    let totalScoreSum = 0;
    let totalQuestionsSum = 0;

    results.forEach(r => {
        if(r.score > highestScore) highestScore = r.score;
        totalScoreSum += r.score;
    });

    if(totalTests > 0) {
        avgScore = (totalScoreSum / totalTests).toFixed(1);
    }
%>

<div class="history-container">
    
    <!-- Header -->
    <div class="page-header">
        <h2 class="page-title">Test History</h2>
        <a href="/student/dashboard" class="back-btn">
            <span>&larr;</span> Dashboard
        </a>
    </div>

    <!-- Stats Overview -->
    <div class="stats-grid">
        <div class="stat-card purple">
            <div class="stat-value"><%= totalTests %></div>
            <div class="stat-label">Total Tests Taken</div>
        </div>
        <div class="stat-card blue">
            <div class="stat-value"><%= avgScore %></div>
            <div class="stat-label">Average Score</div>
        </div>
        <div class="stat-card green">
            <div class="stat-value"><%= highestScore %></div>
            <div class="stat-label">Best Score</div>
        </div>
    </div>

    <!-- Results Table -->
    <div class="table-card">
        <% if (results.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">ðŸ“Š</div>
                <h3>No test history found</h3>
                <p>Looks like you haven't taken any tests yet.</p>
                <a href="/student/dashboard" class="empty-btn">Take a New Test</a>
            </div>
        <% } else { %>
            <div style="overflow-x: auto;">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Date Taken</th>
                            <th>Test Topic</th>
                            <th>Score Achieved</th>
                            <th>Percentage</th>
                            <th style="text-align: right;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(result => { %>
                            <% 
                                const percentage = result.totalQuestions > 0 ? ((result.score / result.totalQuestions) * 100) : 0;
                                let scoreClass = 'low';
                                if(percentage >= 75) scoreClass = 'high';
                                else if(percentage >= 50) scoreClass = 'mid';
                                
                                const dateObj = new Date(result.date);
                                const dateStr = dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                                const timeStr = dateObj.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
                            %>
                            <tr>
                                <td>
                                    <div class="date-text"><%= dateStr %></div>
                                    <span class="time-subtext"><%= timeStr %></span>
                                </td>
                                <td>
                                    <span class="topic-badge"><%= result.topic %></span>
                                </td>
                                <td>
                                    <span class="score-text <%= scoreClass %>">
                                        <%= result.score %> / <%= result.totalQuestions %>
                                    </span>
                                </td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <div style="width: 60px; height: 6px; background: #30363d; border-radius: 3px; overflow: hidden;">
                                            <div style="width: <%= percentage %>%; height: 100%; background: <%= percentage >= 75 ? '#3fb950' : (percentage >= 50 ? '#d29922' : '#ff7b72') %>;"></div>
                                        </div>
                                        <span style="font-size: 0.85rem; color: #8b949e;"><%= percentage.toFixed(0) %>%</span>
                                    </div>
                                </td>
                                <td style="text-align: right;">
                                    <a href="/student/result/<%= result._id %>" class="btn-view">
                                        Analysis <span>&rarr;</span>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>