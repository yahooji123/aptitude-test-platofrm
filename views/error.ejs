<%- include('partials/header') %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #7f1d1d, #450a0a); margin-bottom: 30px;">
    <div style="text-align: center; padding: 40px 20px;">
        <h1 style="color: #fecaca; font-size: 3rem; margin-bottom: 10px;"><%= code || 'Error' %></h1>
        <p style="color: #fee2e2; font-size: 1.2rem;">
            <%= message || 'Something went wrong.' %>
        </p>
    </div>
</div>

<div class="dashboard-container" style="text-align: center; max-width: 600px; margin: 0 auto;">
    <div style="background: #1e293b; border: 1px solid #334155; padding: 30px; border-radius: 12px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-bottom: 20px;">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <p style="color: #cbd5e1; margin-bottom: 20px;">
            We encountered an unexpected issue or the page you are looking for does not exist.
        </p>
        <div style="display: flex; gap: 10px; justify-content: center;">
            <a href="javascript:history.back()" class="btn" style="background: transparent; border: 1px solid #475569; color: #cbd5e1;">&larr; Go Back</a>
            <a href="/" class="btn" style="background: #3b82f6; color: white;">Return Home</a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
