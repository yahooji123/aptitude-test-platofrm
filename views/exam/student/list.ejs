<%- include("../../partials/header") %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); padding: 60px 20px; text-align: center; color: white;">
    <div class="banner-title" style="font-size: 2.5rem; font-weight: 800; margin-bottom: 10px;">Exam Portal</div>
    <div class="banner-subtitle" style="font-size: 1.2rem; opacity: 0.9;">Register and appear for your university examinations.</div>
</div>

<div class="container" style="max-width: 1200px; margin: 40px auto; padding: 0 20px;">
    
    <% if (exams && exams.length > 0) { %>
        <div class="exam-list-grid">
            <% exams.forEach(function(exam) { %>
                <div class="exam-card-student">
                    <% 
                        const now = new Date();
                        const isLive = now >= new Date(exam.startTime) && now <= new Date(exam.endTime);
                        const isEnded = now > new Date(exam.endTime);
                        let statusText = "Upcoming";
                        let statusClass = "status-upcoming";
                        
                        if (isLive) { statusText = "Live Now"; statusClass = "status-live"; }
                        if (isEnded) { statusText = "Ended"; statusClass = "status-ended"; }

                        // Check registration status for this user
                        let myReg = locals.myRegistrations ? locals.myRegistrations[exam._id.toString()] : null;
                        let userStatus = "Not Registered";
                        let badgeClass = "";
                        let badgeText = "";

                        if (myReg) {
                            if (myReg.graded) {
                                userStatus = "Evaluated";
                                badgeClass = "badge-graded";
                                badgeText = `GRADED: ${myReg.marks}`;
                            } else if (myReg.submission || myReg.submissionFile || (myReg.submissionFiles && myReg.submissionFiles.length > 0) || myReg.status === 'completed') {
                                userStatus = "Submitted";
                                badgeClass = "badge-submitted";
                                badgeText = "SUBMITTED";
                            } else {
                                userStatus = "Registered";
                                badgeClass = "badge-registered";
                                badgeText = "REGISTERED";
                            }
                        }
                    %>
                    
                    <!-- Card Header: Title & Status -->
                    <div class="card-header">
                        <div class="status-pill <%= statusClass %>">
                            <span class="dot"></span> <%= statusText %>
                        </div>
                        <% if (badgeText) { %>
                            <div class="user-badge <%= badgeClass %>"><%= badgeText %></div>
                        <% } %>
                    </div>
                    
                    <h3 class="exam-title" title="<%= exam.title %>"><%= exam.title %></h3>
                    
                    <!-- Date & Time Row -->
                    <div class="exam-meta">
                        <div class="meta-item">
                            <span class="meta-icon">üìÖ</span>
                            <span class="meta-text"><%= new Date(exam.date).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">‚è∞</span> 
                            <span class="meta-text">
                                <%= new Date(exam.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %> - 
                                <%= new Date(exam.endTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                            </span>
                        </div>
                    </div>
                    
                    <!-- Instructions Preview -->
                    <div class="exam-desc">
                        <%= (exam.instructions || 'No special instructions provided.').substring(0, 100) %>...
                    </div>

                    <!-- Action Footer -->
                    <div class="card-footer">
                        <% if (userStatus === 'Not Registered') { %>
                            <% if (isEnded) { %>
                                <button class="btn btn-disabled" disabled>Exam Ended</button>
                            <% } else { %>
                                <a href="/exams/<%= exam._id %>/register" class="btn btn-primary btn-block">Register Now</a>
                            <% } %>
                        <% } else { %>
                            <!-- Registered User Actions -->
                            <div class="action-grid">
                                <a href="/exams/card/<%= myReg._id %>" class="btn btn-outline" target="_blank">
                                    üìÑ Admit Card
                                </a>
                                
                                <% if (isLive && !myReg.submittedAt && !myReg.submission && (!myReg.submissionFiles || myReg.submissionFiles.length === 0)) { %>
                                    <a href="/exams/<%= exam._id %>/attempt?regId=<%= myReg._id %>" class="btn btn-success btn-pulse">
                                        üöÄ Launch Exam
                                    </a>
                                <% } else if (myReg.submittedAt || myReg.submission || (myReg.submissionFiles && myReg.submissionFiles.length > 0)) { %>
                                    <a href="/exams/<%= exam._id %>/attempt?regId=<%= myReg._id %>" class="btn btn-info">
                                        üëÅÔ∏è View Submission
                                    </a>
                                <% } else { %>
                                    <button class="btn btn-disabled" disabled>Wait for Exam</button>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-icon">üìÖ</div>
            <h3>No Exams Scheduled</h3>
            <p>There are currently no upcoming university examinations.</p>
        </div>
    <% } %>

</div>

<style>
    /* Scoped Styles for Exam List */
    .exam-list-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 30px;
        padding-bottom: 40px;
    }

    .exam-card-student {
        background: #1e1e2d; /* Dark Navy Card */
        border-radius: 16px;
        padding: 25px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }

    .exam-card-student:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        border-color: rgba(99, 102, 241, 0.3);
    }
    
    /* Top Accent Line */
    .exam-card-student::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #6366f1, #8b5cf6);
        opacity: 0.8;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .status-pill {
        display: inline-flex;
        align-items: center;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .dot {
        height: 6px;
        width: 6px;
        border-radius: 50%;
        margin-right: 6px;
        display: inline-block;
    }

    .status-upcoming { background: rgba(59, 130, 246, 0.15); color: #60a5fa; }
    .status-upcoming .dot { background: #60a5fa; box-shadow: 0 0 5px #60a5fa; }

    .status-live { background: rgba(16, 185, 129, 0.15); color: #34d399; }
    .status-live .dot { background: #34d399; box-shadow: 0 0 5px #34d399; animation: blink 1.5s infinite; }

    .status-ended { background: rgba(239, 68, 68, 0.1); color: #f87171; }
    .status-ended .dot { background: #f87171; }

    .user-badge {
        font-size: 0.7rem;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .badge-registered { background: #4f46e5; color: white; }
    .badge-submitted { background: #059669; color: white; }
    .badge-graded { background: #7c3aed; color: white; }

    .exam-title {
        color: #f3f4f6;
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0 0 15px 0;
        line-height: 1.3;
        flex-grow: 1; /* Allow title to push content down but keep footer at bottom */
    }

    .exam-meta {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 20px;
        color: #9ca3af;
        font-size: 0.9rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
    }

    .meta-icon {
        margin-right: 10px;
        width: 20px;
        text-align: center;
    }

    .exam-desc {
        background: rgba(0, 0, 0, 0.2);
        padding: 12px;
        border-radius: 8px;
        color: #9ca3af;
        font-size: 0.85rem;
        margin-bottom: 25px;
        line-height: 1.5;
        border-left: 2px solid #4b5563;
    }

    .card-footer {
        margin-top: auto; /* Pushes footer to the bottom */
    }

    /* Buttons */
    .btn {
        display: inline-block;
        padding: 12px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        text-align: center;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-block { display: block; width: 100%; }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #4f46e5);
        color: white;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(99, 102, 241, 0.4);
    }

    .btn-outline {
        background: transparent;
        border: 1px solid #4b5563;
        color: #e5e7eb;
    }
    .btn-outline:hover { background: rgba(255, 255, 255, 0.05); border-color: #9ca3af; }

    .btn-success { background: #10b981; color: white; }
    .btn-info { background: #3b82f6; color: white; }

    .btn-disabled {
        background: #374151;
        color: #9ca3af;
        cursor: not-allowed;
        width: 100%;
    }

    .action-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .btn-pulse {
        animation: pulse-green 2s infinite;
    }

    @keyframes pulse-green {
        0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
        100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
    }

    @keyframes blink {
        50% { opacity: 0.5; }
    }

    .empty-state {
        text-align: center;
        padding: 60px;
        color: #6b7280;
        border: 2px dashed #374151;
        border-radius: 12px;
        background: rgba(31, 41, 55, 0.4);
    }
    .empty-icon { font-size: 4rem; margin-bottom: 20px; opacity: 0.5; }
</style>
