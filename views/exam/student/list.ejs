<%- include("../../partials/header") %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); padding: 60px 20px; text-align: center; color: white;">
    <div class="banner-title" style="font-size: 2.5rem; font-weight: 800; margin-bottom: 10px;">Exam Portal</div>
    <div class="banner-subtitle" style="font-size: 1.2rem; opacity: 0.9;">Register and appear for your university examinations.</div>
</div>

<div class="container" style="max-width: 1200px; margin: 40px auto; padding: 0 20px;">
    
    <% if (exams && exams.length > 0) { %>
        <div class="exam-list-grid">
            <% exams.forEach(function(exam) { %>
                <div class="exam-card-student">
                    <% 
                        const now = new Date();
                        const isLive = now >= new Date(exam.startTime) && now <= new Date(exam.endTime);
                        const isEnded = now > new Date(exam.endTime);
                        let statusText = "Upcoming";
                        let statusClass = "status-upcoming";
                        
                        if (isLive) { statusText = "Live Now"; statusClass = "status-live"; }
                        if (isEnded) { statusText = "Ended"; statusClass = "status-ended"; }

                        // Check registration status for this user
                        let myReg = locals.myRegistrations ? locals.myRegistrations[exam._id.toString()] : null;
                        let userStatus = "Not Registered";
                        let badgeClass = "";
                        let badgeText = "";

                        if (myReg) {
                            if (myReg.graded) {
                                userStatus = "Evaluated";
                                badgeClass = "badge-graded";
                                badgeText = `GRADED: ${myReg.marks}`;
                            } else if (myReg.submission || myReg.submissionFile || (myReg.submissionFiles && myReg.submissionFiles.length > 0) || myReg.status === 'completed') {
                                userStatus = "Submitted";
                                badgeClass = "badge-submitted";
                                badgeText = "SUBMITTED";
                            } else {
                                userStatus = "Registered";
                                badgeClass = "badge-registered";
                                badgeText = "REGISTERED";
                            }
                        }
                    %>
                    
                    <!-- Card Header: Title & Status -->
                    <div class="card-header">
                        <div class="status-pill <%= statusClass %>">
                            <span class="dot"></span> <%= statusText %>
                        </div>
                        <% if (badgeText) { %>
                            <div class="user-badge <%= badgeClass %>"><%= badgeText %></div>
                        <% } %>
                    </div>
                    
                    <h3 class="exam-title" title="<%= exam.title %>"><%= exam.title %></h3>
                    
                    <!-- Date & Time Row -->
                    <div class="exam-meta">
                        <div class="meta-item">
                            <span class="meta-icon">üìÖ</span>
                            <span class="meta-text"><%= new Date(exam.date).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">‚è∞</span> 
                            <span class="meta-text">
                                <%= new Date(exam.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %> - 
                                <%= new Date(exam.endTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                            </span>
                        </div>
                    </div>
                    
                    <!-- Instructions Preview -->
                    <div class="exam-desc">
                        <%= (exam.instructions || 'No special instructions provided.').substring(0, 100) %>...
                    </div>

                    <!-- Action Footer -->
                    <div class="card-footer">
                        <% if (userStatus === 'Not Registered') { %>
                            <% if (isEnded) { %>
                                <button class="btn btn-disabled" disabled>Exam Ended</button>
                            <% } else { %>
                                <a href="/exams/<%= exam._id %>/register" class="btn btn-primary btn-block">Register Now</a>
                            <% } %>
                        <% } else { %>
                            <!-- Registered User Actions -->
                            <div class="action-grid">
                                <a href="/exams/card/<%= myReg._id %>" class="btn btn-outline" target="_blank">
                                    üìÑ Admit Card
                                </a>
                                
                                <% if (isLive && !myReg.submittedAt && !myReg.submission && (!myReg.submissionFiles || myReg.submissionFiles.length === 0)) { %>
                                    <a href="/exams/<%= exam._id %>/attempt?regId=<%= myReg._id %>" class="btn btn-success btn-pulse">
                                        üöÄ Launch Exam
                                    </a>
                                <% } else if (myReg.submittedAt || myReg.submission || (myReg.submissionFiles && myReg.submissionFiles.length > 0)) { %>
                                    <a href="/exams/<%= exam._id %>/attempt?regId=<%= myReg._id %>" class="btn btn-info">
                                        üëÅÔ∏è View Submission
                                    </a>
                                <% } else if (isEnded) { %>
                                    <span class="status-text-missed">Absent / Missed</span>
                                <% } else { %>
                                    <button class="btn btn-secondary" disabled>Wait for Start</button>
                                <% } %>
                            </div>
                        <% } %>
                    </div>

                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-icon">üìÇ</div>
            <h3>No Exams Scheduled</h3>
            <p>Check back later for upcoming test schedules.</p>
        </div>
    <% } %>
</div>

<style>
    /* New Dashboard Style */
    :root {
        --primary-color: #4f46e5;
        --secondary-color: #f1f5f9;
        --text-dark: #1e293b;
        --text-light: #64748b;
        --success-color: #10b981;
        --danger-color: #ef4444;
        --warning-color: #f59e0b;
        --info-color: #3b82f6;
    }

    body {
        background-color: #f8fafc;
    }

    .exam-list-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 25px;
    }

    .exam-card-student {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 24px;
        display: flex;
        flex-direction: column;
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
        position: relative;
        overflow: hidden;
    }

    .exam-card-student:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border-color: var(--primary-color);
    }
    
    /* Top Status Bar */
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .status-pill {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 4px 10px;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .status-pill .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: currentColor;
    }
    .status-upcoming { background: #eff6ff; color: #3b82f6; } /* Blue */
    .status-live { background: #fef2f2; color: #ef4444; animation: pulse-red 2s infinite; } /* Red */
    .status-ended { background: #f1f5f9; color: #64748b; } /* Grey */

    .user-badge {
        font-size: 0.7rem;
        font-weight: 700;
        padding: 4px 8px;
        border-radius: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .badge-registered { background: #fffbeb; color: #d97706; border: 1px solid #fcd34d; }
    .badge-submitted { background: #eff6ff; color: #2563eb; border: 1px solid #bfdbfe; }
    .badge-graded { background: #ecfdf5; color: #059669; border: 1px solid #a7f3d0; }

    /* Content */
    .exam-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0 0 16px 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .exam-meta {
        display: flex;
        flex-direction: column;
        gap: 10px;
        background: #f8fafc;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 16px;
    }
    .meta-item {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.9rem;
        color: var(--text-dark);
    }
    .meta-icon { font-size: 1.1rem; }
    .meta-text { font-weight: 500; }

    .exam-desc {
        color: var(--text-light);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 24px;
        flex-grow: 1;
    }

    /* Actions */
    .card-footer {
        margin-top: auto;
    }
    .action-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .btn {
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        display: inline-block;
    }
    .btn-block { width: 100%; display: block; }
    
    .btn-primary { background: var(--primary-color); color: white; }
    .btn-primary:hover { background: #4338ca; box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3); }

    .btn-outline { background: white; border: 1px solid #cbd5e1; color: var(--text-dark); }
    .btn-outline:hover { border-color: var(--text-dark); background: #f8fafc; }

    .btn-success { background: var(--success-color); color: white; }
    .btn-success:hover { background: #059669; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3); }

    .btn-info { background: var(--info-color); color: white; }
    .btn-info:hover { background: #2563eb; }

    .btn-secondary { background: #e2e8f0; color: #94a3b8; }
    .btn-disabled { background: #f1f5f9; color: #94a3b8; cursor: not-allowed; width: 100%; border: 1px solid #e2e8f0; }

    .btn-pulse { animation: pulse-shadow 2s infinite; }

    .status-text-missed {
        display: block; text-align: center; color: var(--danger-color);
        font-weight: 600; font-size: 0.9rem; padding: 10px; background: #fef2f2; border-radius: 8px;
    }

    @keyframes pulse-red { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
    @keyframes pulse-shadow { 0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); } 70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); } 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); } }

    /* Empty State */
    .empty-state { text-align: center; padding: 60px 20px; color: var(--text-light); }
    .empty-icon { font-size: 3rem; margin-bottom: 20px; opacity: 0.5; }

    /* Responsive */
    @media (max-width: 600px) {
        .exam-list-grid { grid-template-columns: 1fr; }
        .action-grid { grid-template-columns: 1fr; }
    }
</style>

<%- include("../../partials/footer") %>
