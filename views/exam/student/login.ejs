<%- include("../../partials/header") %>

<div class="auth-wrapper">
    <div style="width: 100%; max-width: 400px;">
        <div style="text-align: center; margin-bottom: 30px;">
            <div style="font-size: 3rem; margin-bottom: 10px;"></div>
            <h2 style="color: white; margin: 0 0 10px 0;">Safe Exam Browser</h2>
            <p style="color: #8b949e; margin: 0;">Enter credentials to unlock</p>
        </div>

        <div class="auth-card">

            <% if (typeof error !== "undefined" && error) { %>
                <div class="error-banner">
                     <%= error %>
                </div>
            <% } %>

            <form action="/exams/<%= exam._id %>/login" method="POST" class="auth-form">
                <div class="form-group">
                    <label>Registration Number</label>
                    <input type="text" name="registrationNumber" placeholder="e.g. REG-1721..." required>
                </div>

                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" name="dob" required>
                </div>

                <button type="submit" class="submit-btn full-width">Enter Exam Hall</button>
            </form>
        </div>

        <div class="auth-footer">
            <a href="/exams/<%= exam._id %>/register" class="back-link">No Registration Number? Register Here</a>
        </div>
    </div>
</div>

<style>
    .auth-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: #0d1117;
    }

    .auth-card {
        background: #161b22;
        padding: 40px;
        border-radius: 12px;
        border: 1px solid #30363d;
        box-shadow: 0 8px 24px rgba(0,0,0,0.5);
    }

    .error-banner {
        background: rgba(248, 81, 73, 0.1);
        border: 1px solid rgba(248, 81, 73, 0.4);
        color: #f85149;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        color: #e6edf3;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }
    .form-group input {
        width: 100%;
        padding: 12px;
        background: #0d1117;
        border: 1px solid #30363d;
        border-radius: 6px;
        color: white;
        font-size: 1rem;
        box-sizing: border-box; 
    }
    .form-group input:focus {
        border-color: #58a6ff;
        outline: none;
        box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.1);
    }

    .submit-btn {
        background: #238636;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }
    .submit-btn:hover { background: #2ea043; }
    .full-width { width: 100%; }

    .auth-footer {
        margin-top: 25px;
        text-align: center;
    }

    .back-link {
        color: #58a6ff;
        text-decoration: none;
        font-size: 0.9rem;
    }
    .back-link:hover { text-decoration: underline; }
</style>

<%- include("../../partials/footer") %>
