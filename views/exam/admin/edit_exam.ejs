<%- include("../../partials/header") %>

<div class="dashboard-banner" style="background: linear-gradient(135deg, #a855f7 0%, #d946ef 100%); padding: 40px 20px; text-align: center; color: white;">
    <h1 style="font-size: 2rem; font-weight: 800; margin-bottom: 5px;">Edit Exam</h1>
    <p style="opacity: 0.9;">Update examination details.</p>
</div>

<div style="max-width: 800px; margin: 40px auto; padding: 20px;">
    
    <div class="test-config-card" style="background: var(--bg-card); padding: 30px; border-radius: 12px; border: 1px solid var(--border-color);">
        <form action="/exams/admin/edit/<%= exam._id %>" method="POST">
            
            <div class="form-group">
                <label>Exam Title</label>
                <input type="text" name="title" class="form-control" value="<%= exam.title %>" required>
            </div>

            <div class="form-group">
                <label>Date</label>
                <!-- Format date to YYYY-MM-DD for input type="date" -->
                <input type="date" name="date" class="form-control" value="<%= new Date(exam.date).toISOString().split('T')[0] %>" required>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Start Time</label>
                    <input type="time" name="startTime" class="form-control" value="<%= new Date(exam.startTime).toTimeString().slice(0,5) %>" required>
                </div>
                <div class="col-md-6 form-group">
                    <label>End Time (Validity Ends)</label>
                    <input type="time" name="endTime" class="form-control" value="<%= new Date(exam.endTime).toTimeString().slice(0,5) %>" required>
                </div>
            </div>

            <div class="form-group">
                <label>Duration (minutes)</label>
                <input type="number" name="duration" class="form-control" value="<%= exam.duration || 60 %>" required min="1">
            </div>

            <div class="form-group">
                <label>Instructions</label>
                <textarea name="instructions" class="form-control" rows="4" required><%= exam.instructions %></textarea>
            </div>

            <div class="form-group">
                <label>Question Paper Content (Plain Text / Questions)</label>
                <textarea name="questionPaperContent" class="form-control" rows="10" placeholder="Paste your question paper content here..." required><%= exam.questionPaperContent %></textarea>
                <small style="color: var(--text-secondary);">This content will be shown to students exactly as entered.</small>
            </div>

            <div style="display: flex; gap: 15px; margin-top: 30px;">
                <button type="submit" class="btn-primary-custom" style="flex: 1; justify-content: center;">Update Exam</button>
                <a href="/exams/admin/dashboard" class="btn-secondary-custom" style="flex: 0 0 100px; text-decoration: none; text-align: center; padding: 10px; border: 1px solid var(--border-color); border-radius: 6px; color: var(--text-primary);">Cancel</a>
            </div>

        </form>
    </div>

</div>

<style>
    .form-group { margin-bottom: 20px; }
    .form-group label { display: block; margin-bottom: 8px; font-weight: 600; color: var(--text-primary); }
    .form-control {
        width: 100%;
        padding: 10px;
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        border-radius: 6px;
        color: var(--text-primary);
        font-family: inherit;
    }
    .form-control:focus { outline: 2px solid #a855f7; border-color: transparent; }
    
    .btn-primary-custom {
        background-color: #a855f7;
        color: white; 
        border: none;
        padding: 12px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-primary-custom:hover { background-color: #9333ea; }
    
    .row { display: flex; gap: 20px; }
    .col-md-6 { flex: 1; }
</style>

<%- include("../../partials/footer") %>
